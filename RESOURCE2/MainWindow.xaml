<Window x:Class="RESOURCE2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RESOURCE2"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>
        <SolidColorBrush x:Key="MyBrush" Color="Yellow"></SolidColorBrush>
        <system:String x:Key="msg">환영합니다.</system:String>
        <local:Car x:Key="mycar"/>
    </Window.Resources>

    <StackPanel>
        <Button Background="{StaticResource MyBrush}" FontSize="30" Content="{StaticResource msg}"></Button>
        <Button Click="Button_Click" Content="ClickMe" FontSize="30"/>
    </StackPanel>
</Window>
