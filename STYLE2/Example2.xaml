<Window x:Class="STYLE2.Example2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:STYLE2"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="800">

    <Window.Resources>
        <Style x:Key="BaseFontStyle">
            <Setter Property="Control.FontFamily" Value="Times New Roman" />
            <Setter Property="ItemsControl.FontSize" Value="30" />
            <Setter Property="ItemsControl.FontWeight" Value="Bold" />
        </Style>

        <Style x:Key="TitleFontStyle" BasedOn="{StaticResource BaseFontStyle}" >
            <Setter Property="Control.Foreground" Value="White" />
            <Setter Property="Control.Background" Value="DarkBlue" />
        </Style>
    </Window.Resources>

    <StackPanel>
        <Button Content="Welcome" Style="{StaticResource TitleFontStyle}" />
    </StackPanel>
</Window>
