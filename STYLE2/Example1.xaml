<Window x:Class="STYLE2.Example1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:STYLE2"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="BigFontStyle">
            <Setter Property="Control.FontFamily" Value="Times New Roman" />
            <Setter Property="ItemsControl.FontSize" Value="30" />
            <Setter Property="Control.FontWeight" Value="Bold" />
        </Style>

        <Style TargetType="Label">
            <Setter Property="Control.Foreground" Value="Red" />
            <Setter Property="ItemsControl.Background" Value="Yellow"/>
            <Setter Property="ItemsControl.FontSize" Value="30"/>
        </Style>
    </Window.Resources>

    <StackPanel>
        <Button Content="Welcome" Style="{StaticResource BigFontStyle}" />
        <Label Content="Label1" />
        <Label Content="Label2" />
    </StackPanel>
</Window>
