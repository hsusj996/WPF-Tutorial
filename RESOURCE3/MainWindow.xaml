<Window x:Class="RESOURCE3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RESOURCE3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>
        <SolidColorBrush x:Key="brush1" Color="Yellow"/>
    </Window.Resources>

    <StackPanel>
        <Button Background="{DynamicResource brush1}" Content="Button1" FontSize="30"/>
        <Button Background="{DynamicResource brush2}" Content="Button1" FontSize="30"/>
        <Button Background="{DynamicResource brush3}" Content="Button1" FontSize="30"/>
    </StackPanel>
</Window>
