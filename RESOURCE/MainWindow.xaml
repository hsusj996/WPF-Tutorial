<Window x:Class="RESOURCE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RESOURCE"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>
        <SolidColorBrush x:Key="MyBrush" Color="Yellow"></SolidColorBrush>
    </Window.Resources>
    <StackPanel>
        <Button Background="AliceBlue" Content="button1" FontSize="30"></Button>
        <Button Background="{StaticResource MyBrush}" Content="button2" FontSize="30"></Button>
        <Button Background="{DynamicResource MyBrush}" Content="button3" FontSize="30"></Button>
        <Button Background="AliceBlue" Content="button4" FontSize="30" x:Name="button4" Click="button4_Click"></Button>
    </StackPanel>
</Window>
