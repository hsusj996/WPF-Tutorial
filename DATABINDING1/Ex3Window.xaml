<Window x:Class="DATABINDING1.Ex3Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DATABINDING1"
        mc:Ignorable="d"
        Title="Ex3Window" Height="450" Width="800">

    <Grid>
        <ListView Name="listview" FontSize="30">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="100" 
                                    DisplayMemberBinding="{Binding Path=Name}"/>
                    <GridViewColumn Header="Address" Width="400" 
                                    DisplayMemberBinding="{Binding Path=Address}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
